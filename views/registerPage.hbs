
<html lang='en' id="registerPage">

<head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Register</title>
    <!-- Latest compiled and minified CSS -->
    <link
      rel='stylesheet'
      href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css'
    />
    <link rel='stylesheet' href='/css/register.css' />
</head>

<body>
    <div class='countainer'>
      <img class='img' src='/img/background.jpeg' />
      <div class='div-form-reg'>
        <div class='title'>
          <p>Resiter</p>
        </div>
        <form class='register-form'>
          <div class='content-reg-form'>

            <div>
              <div class='register-info'>
                <label for='userName'>userName:</label>
                <input
                  class='position-right'
                  type='text'
                  id='userName'
                  name='userName'
                  placeholder='userName'
                />
              </div>
              <div class='error-msg'>
                <p id="userName-err" style="color: rgb(238, 37, 37);">
                </p>
              </div>
            </div>
            <div class='form-group'>
              <div class='register-info'>
                <label for='password'>password:</label>
                <input
                  class='position-right'
                  type='password'
                  id='password'
                  name='password'
                  placeholder='Password'
                />
              </div>
              <div class='error-msg'>
                <p id="password-err" style="color: rgb(238, 37, 37);">
              
                </p>
              </div>
            </div>

            <div class='form-group'>
              <div class='register-info'>
                <label for='firstName'>firstName:</label>
                <input
                  class='position-right'
                  type='text'
                  id='firstName'
                  name='firstName'
                  placeholder='firstName'
                />
              </div>
              <div class='error-msg'>
                <p id="firstName-err" style="color: rgb(238, 37, 37);"> 
               
                </p>
              </div>
            </div>
            <div class='form-group'>
              <div class='register-info'>
                <label for='lastName'> lastName:</label>
                <input
                  class='position-right'
                  type='text'
                  id='lastName'
                  name='lastName'
                  placeholder='lastName'
                />
              </div>
              <div class='error-msg'>
                <p id="lastName-err" style="color: rgb(238, 37, 37);">
                  
                </p>
              </div>
            </div>
            <div class='form-group'>
              <div class='register-info'>
                <label for='phoneNumber'>phoneNumber:</label>
                <input
                  class='position-right'
                  type='tel'
                  id='phoneNumber'
                  name='phoneNumber'
                  placeholder='e.x: 09151234567'
                />
              </div>
              <div class='error-msg'>
                <p id="phoneNumber-err" style="color: rgb(238, 37, 37);">
                 
                </p>
              </div>
            </div>

          <div class="div-gender"> 
              <div class="title-gender ">
               <hp>gender:</p>
              </div>
            <div class='select-gender'>
              <input
                class='form-check-input'
                type='radio'
                name='gender'
                id='male'
                value='male'
                checked
              />
              <label class='form-check-label' for='male'>
                male
              </label>
              <input
                class='form-check-input'
                type='radio'
                name='gender'
                id='female'
                value='female'
              />
              <label class='form-check-label' for='female'>
                female
              </label>
            </div>
          </div>
            {{!-- <div class='form-group'>
              <label for='img-reg'>put yor image</label>
              <input type='file' id='img-reg' name='avatar' />
              <p id='img-reg'></p>
            </div> --}}

          <div class="div-btns">
            <button id='btn-signUp' type="submit" class='btn btn-success'>Sign
              up</button>
            <button class='btn-back-login btn btn-primary'><a
                class='back-login'
                href='http://localhost:3000/login/page'
              >Back Login</a>
            </button>
          </div>
        </form>

      </div>
    </div>

  </body>
  <script
    src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js'
  ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js"></script>
  <script
    src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js'
    integrity='sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk'
    crossorigin='anonymous'
  ></script>
  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js'
    integrity='sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy'
    crossorigin='anonymous'
  ></script>
  <script src="/js/ajaxRegister.js" ></script>
  <script src='/js/main.js'></script>

</html>